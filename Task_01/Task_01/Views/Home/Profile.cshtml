<!-- Profile Section -->
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="profile-section p-4">
                <!-- Profile Header -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h3 class="section-title">User Profile</h3>
                    <button class="btn btn-outline-primary btn-sm" onclick="openEditModal()">
                        <i class="fas fa-edit me-2"></i>Edit
                    </button>
                </div>

                <!-- Profile Content -->
                <div class="row g-4">
                    <!-- الصورة الشخصية -->
                    <div class="col-md-4 text-center">
                        <div class="avatar-edit mb-3">
                            <img src="~/img/worker735.png" class="avatar-preview" alt="Profile">
                            <button class="btn btn-light btn-sm shadow-sm"
                                    style="position: absolute; bottom: -10px; right: -10px;"
                                    onclick="document.getElementById('fileInput').click()">
                                <i class="fas fa-camera"></i>
                            </button>
                            <input type="file" id="fileInput" hidden accept="image/*">
                        </div>
                        <span class="badge-subtle">Personal Account</span>
                    </div>

                    <!-- المعلومات الشخصية -->
                    <div class="col-md-8">
                        <div class="row g-3">
                            <div class="col-12">
                                <label class="text-muted small">Full Name</label>
                                <h5 class="mb-0">Sofyan Nj</h5>
                            </div>
                            <div class="col-md-6">
                                <label class="text-muted small">Email</label>
                                <h5 class="mb-0">sfn.nj@example.com</h5>
                            </div>
                            <div class="col-md-6">
                                <label class="text-muted small">Phone</label>
                                <h5 class="mb-0">+962 797 999 777</h5>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Edit Profile Modal -->
                <div class="modal fade" id="editModal" tabindex="-1">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Edit Profile</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <form id="profileForm" onsubmit="updateProfile(event)">
                                    <div class="mb-3">
                                        <label class="form-label">Full Name</label>
                                        <input type="text" class="form-control" id="editName" required>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Email Address</label>
                                        <input type="email" class="form-control" id="editEmail" required>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Phone Number</label>
                                        <input type="tel" class="form-control" id="editPhone" required>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">New Password</label>
                                        <input type="tel" class="form-control" id="editPhone" >
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Confirm Password</label>
                                        <input type="tel" class="form-control" id="editPhone" >
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Account Type</label>
                                        <select class="form-select" id="editAccountType">
                                            <option value="personal">Personal Account</option>
                                            <option value="company">Business Account</option>
                                        </select>
                                    </div>

                                    <div class="d-grid gap-2">
                                        <button type="submit" class="btn btn-primary">Save Changes</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>



                <div class="mt-5 inline-section">
                    <!-- Payment Methods -->
                    <div class="compact-card p-3 bg-light">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h6 class="section-title mb-0">Payment Methods</h6>
                            <button class="btn btn-link btn-sm p-0" data-bs-toggle="modal"
                                    data-bs-target="#addPaymentModal">
                                <i class="fas fa-plus"></i>
                            </button>
                        </div>
                        <div class="payment-card p-3 bg-white rounded">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <i class="fab fa-cc-visa text-primary"></i>
                                    <span class="ms-2">**** 1234</span>
                                </div>
                                <button class="btn btn-link text-danger p-0">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Subscription -->
                    <div class="compact-card p-3 bg-primary text-white">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="section-title mb-1 text-white">Premium Subscription</h6>
                                <small>Get exclusive features</small>
                            </div>
                            <button class="btn btn-light btn-sm rounded-pill px-3">
                                Subscribe
                            </button>
                        </div>
                    </div>
                </div>

                <!-- My Ads -->
                <div class="mt-4">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h6 class="section-title mb-0">My Ads (2)</h6>
                        <button class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#newAdModal">
                            <i class="fas fa-plus me-2"></i>New Ad
                        </button>
                    </div>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="compact-card">
                                <img src="img/Furnituer/images (1).jpeg" class="card-img-top rounded-top" alt="Ad"
                                     style="height: 150px; object-fit: cover;">
                                <div class="p-3">
                                    <h6 class="mb-1">Brand New Plastic Chairs 500 Peice</h6>
                                    <small class="text-muted">JD 200</small>
                                    <div class="d-flex justify-content-between mt-2">
                                        <button class="btn btn-sm btn-outline-warning">Edit</button>
                                        <button class="btn btn-sm btn-outline-danger">Delete</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="compact-card">
                                <img src="img/Electrical Appliances/electricalApplinces01.jpg" class="card-img-top rounded-top" alt="Ad"
                                     style="height: 150px; object-fit: cover;">
                                <div class="p-3">
                                    <h6 class="mb-1">Used Electrical Appliances</h6>
                                    <small class="text-muted">JD 3000</small>
                                    <div class="d-flex justify-content-between mt-2">
                                        <button class="btn btn-sm btn-outline-warning">Edit</button>
                                        <button class="btn btn-sm btn-outline-danger">Delete</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- يمكن إضافة المزيد من الإعلانات هنا -->
                    </div>
                </div>

                <!-- Favorites -->
                <div class="mt-4">
                    <h6 class="section-title mb-3">Favorites</h6>
                    <div class="row g-3">
                        <div class="col-md-4">
                            <div class="compact-card">
                                <img src="img/scrap/aliminium.jpg" class="card-img-top rounded-top" alt="Favorite"
                                     style="height: 120px; object-fit: cover;">
                                <div class="p-3">
                                    <h6 class="mb-1">Alliminium Bars 1400 KG</h6>
                                    <small class="text-muted">JD 900</small>
                                    <button class="btn btn-danger btn-sm w-100 mt-2">
                                        <i class="fas fa-heart-broken me-2"></i>Remove
                                    </button>
                                </div>
                            </div>
                        </div>
                        <!-- يمكن إضافة المزيد من المفضلة هنا -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

