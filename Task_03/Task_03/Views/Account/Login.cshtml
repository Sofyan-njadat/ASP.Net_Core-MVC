
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Login</h1>

<form method="post">
    <label>Email :</label>
    <input type="email" name="Email" required />
    <br />
    <label>Password:</label>
    <input type="password" name="Password" required />
    <br />
    <button type="submit">Login</button>
</form>